  "bugs": {
    "url": "https://github.com/Sanchit-Warang/Ecommerce/issues"
  },
  "homepage": "https://github.com/Sanchit-Warang/Ecommerce#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "express": "^4.18.2",
    "mongoose": "^7.3.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "dotenv": "^16.3.1",
    "nodemon": "^2.0.22"
  }
}
